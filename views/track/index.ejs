<% include ../_partials/head %>
  <% include ../_partials/messages %>
  <main>
    <% include ../_partials/appLink %>
    <% if (!images.length) { %>
      <h2>No images</h2>
    <% } else { %>
      <% include ./_pager %>
      <% for (let image of images) { %>
        <article class="post">
          <section class="image">
            <a href="<%= `/${image.path.replace('uploads', 'image')}` %>">
              <img src="<%= `/${image.path}` %>" />
            </a>
          </section>
          <% if (canWrite) { %>
            <% include ./_controls %>
          <% } %>
        </article>
      <% } %>
      <% include ./_pager %>
    <% } %>
  </main> 
<% include ../_partials/footer %>

