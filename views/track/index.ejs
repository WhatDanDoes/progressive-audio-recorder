<% include ../_partials/head %>
  <% include ../_partials/messages %>
  <main>
    <section class="deep-link">
      <form action="/track" method="post" id="tracks-form" enctype="multipart/form-data">
        <input id="tracks-input" type="file" accept="audio/*" name="docs" multiple>
        <label for="tracks-input">
          <img src="/images/file-upload.png"><br>
          Upload audio file
        </label>
      </form>
    </section>
    <% include ../_partials/appLink %>
    <% if (!tracks.length) { %>
      <h2>No tracks</h2>
    <% } else { %>
      <% include ./_pager %>
      <% for (let track of tracks) { %>
        <article class="post">
          <section class="track">
            <figure>
              <figcaption>
                <a href="<%= `/${track.path.replace('uploads', 'track')}` %>">
                  <%= `/${track.path.replace('uploads', 'track')}` %>
                </a>
              </figcaption>
              <audio
                controls
                src="<%= `/${track.path}` %>">
                  Your browser does not support the
                  <code>audio</code> element.
              </audio>
            </figure>
          </section>
          <% if (canWrite) { %>
            <% include ./_controls %>
          <% } %>
        </article>
      <% } %>
      <% include ./_pager %>
    <% } %>
  </main>
<% include ../_partials/footer %>

